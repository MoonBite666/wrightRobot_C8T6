{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build STM",
			"type": "process",
			"command": "${command:stm32-for-vscode.build}",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Build Clean STM",
			"type": "process",
			"command": "${command:stm32-for-vscode.cleanBuild}",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Flash STM",
			"type": "process",
			"command": "${command:stm32-for-vscode.flash}",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Linux Build STM",
			"type": "process",
			"command": "make -j12",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Linux CleanBuild STM",
			"type": "process",
			"command": "rm ./build && make -j12",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Linux Flash STM",
			"type": "process",
			"command": "openocd -f ./openocd.cfg -c 'program build/wrightRobot_C8T6.elf verify reset exit'", 
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		}

	]
}